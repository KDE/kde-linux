# Give members of the "audio" group permission to keep the CPU in low latency mode
DEVPATH=="/devices/virtual/misc/cpu_dma_latency", OWNER="root", GROUP="audio", MODE="0660"
# Give members of the audio group read permission for /dev/rtc0 and /dev/hpet, which
# they may need for various purposes
KERNEL=="rtc0", GROUP="audio"
KERNEL=="hpet", GROUP="audio"
