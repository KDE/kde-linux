[Unit]
Description=Overlay for a writable /usr/local
RequiresMountsFor=/usr /var
ConditionPathExists=/usr/local
ConditionPathExists=/var/local
ConditionPathExists=/var/local.work

[Mount]
Type=overlay
What=overlay
Where=/usr/local
Options=lowerdir=/usr/local,upperdir=/var/local,workdir=/var/local.work

[Install]
WantedBy=multi-user.target
