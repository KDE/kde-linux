[Unit]
Description=Prepare sysext trigger and routing for /usr/local (installed system only)
DefaultDependencies=no
After=local-fs.target
Before=systemd-sysext.service
ConditionPathExists=!/live/
ConditionKernelCommandLine=!kde-linux.live=1

[Service]
Type=oneshot
ExecStart=/usr/lib/setup-usr-local-sysext

[Install]
WantedBy=sysinit.target
