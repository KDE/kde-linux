[Unit]
Description=Clean Up Temporary Hibernation Swap
DefaultDependencies=no
RequiresMountsFor=/var
After=systemd-hibernate-clear.service
Wants=systemd-hibernate-clear.service

AssertPathExists=/var/hibernation/hibernation.swapfile

[Service]
Type=oneshot
ExecStart=/usr/bin/_kde-linux-hibernate-swap-helper cleanup

[Install]
WantedBy=systemd-hibernate-clear.service
