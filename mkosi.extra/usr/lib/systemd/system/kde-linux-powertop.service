[Unit]
Description=Power tunings

[Service]
Type=oneshot
ExecStart=/usr/bin/powertop --auto-tune
ExecStartPost=/usr/lib/disable-usb-autosuspend-for-input-devices

[Install]
WantedBy=multi-user.target sleep.target
