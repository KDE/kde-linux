if [ "$(id -u)" != "0" ]; then
    exec pkexec /usr/local/bin/calamares "$@"
fi

export KDE_FULL_SESSION=TRUE
export KDE_SESSION_VERSION=6

export QT_QPA_PLATFORMTHEME=kde

exec /usr/bin/calamares -c /calamares/desktop "$@"
